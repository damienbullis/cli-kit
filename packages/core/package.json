{
    "name": "cli-tools",
    "version": "0.0.0",
    "description": "A cli toolkit",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "type": "module",
    "sideEffects": false,
    "license": "MIT",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "bun test --coverage",
        "lint": "tsc && eslint .",
        "build": "bun build src/index.ts --outdir ./dist --target node --format esm --minify",
        "dev": "tsup src/index.ts --format esm,cjs --watch --dts --env.NODE_ENV development",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/damienbullis/cli-tools"
    },
    "keywords": [
        "cli",
        "command",
        "line",
        "interface",
        "tool",
        "utility",
        "tools"
    ],
    "author": "Damien Bullis",
    "devDependencies": {
        "bun-types": "^1.0.6",
        "eslint-config-custom": "workspace:*",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "tsconfig": "workspace:*",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2"
    }
}
